{
  "name": "@atlassian/chroma-modals",
  "version": "2.0.0",
  "description": "Chroma components",
  "author": "Atlassian Pty Ltd",
  "publishConfig": {
    "registry": "https://packages.atlassian.com/api/npm/npm-remote"
  },
  "atlassian": {
    "team": "Chroma",
    "inPublicMirror": false,
    "releaseModel": "continuous"
  },
  "repository": "https://bitbucket.org/atlassian/atlassian-frontend",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "module:es2019": "dist/es2019/index.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "atlaskit:src": "src/index.ts",
  "af:exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "ak-postbuild": "ls -d dist/* | xargs -n 1 copyfiles -u 1 -V src/**/*.svg",
    "lint": "(cd ../../.. && yarn eslint 'packages/chroma/modals/**/*.{ts,tsx,ts}')",
    "lint:fix": "(cd ../../.. && yarn eslint --fix 'packages/chroma/modals/**/*.{ts,tsx,ts}')",
    "typecheck": "NODE_OPTIONS=--max-old-space-size=4096 tsc --noEmit --project ./tsconfig.json",
    "storybook": "(cd ../../.. && yarn storybook chroma-modals)",
    "test": "(cd ../../.. && yarn test 'packages/chroma/modals')",
    "test:watch": "(cd ../../.. && yarn test --watch packages/chroma/modals)"
  },
  "dependencies": {
    "@atlaskit/analytics-gas-types": "^5.0.2",
    "@atlaskit/analytics-next": "^8.0.1",
    "@atlaskit/button": "^16.0.0",
    "@atlaskit/checkbox": "^12.0.0",
    "@atlaskit/icon": "^21.9.0",
    "@atlaskit/lozenge": "^11.0.0",
    "@atlaskit/modal-dialog": "^12.0.0",
    "@atlaskit/theme": "^12.0.0",
    "@atlaskit/tooltip": "^17.5.0",
    "@atlassian/analytics-bridge": "^0.4.1",
    "@atlassian/error-handling": "^0.3.5",
    "@babel/runtime": "^7.0.0",
    "react-intl": "^2.6.0",
    "react-sweet-state": "^2.1.1"
  },
  "peerDependencies": {
    "@atlassiansox/analytics-web-client": "^3.6.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "styled-components": "^3.2.6"
  },
  "devDependencies": {
    "@atlaskit/docs": "^9.0.0",
    "@atlassian/atlassian-frontend-prettier-config-1.0.1": "npm:@atlassian/atlassian-frontend-prettier-config@1.0.1",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addons": "^6.1.11",
    "@storybook/react": "^6.0.0-alpha.19",
    "@testing-library/react": "^8.0.1",
    "@testing-library/user-event": "10.4.0",
    "copyfiles": "^2.3.0",
    "enzyme": "^3.10.0",
    "fetch-mock": "^8.0.0"
  },
  "techstack": {
    "@atlassian/frontend": {
      "code-structure": [
        "tangerine-next"
      ],
      "import-structure": [
        "atlassian-conventions"
      ],
      "circular-dependencies": [
        "file-and-folder-level"
      ]
    },
    "@repo/internal": {
      "analytics": [
        "analytics-next"
      ],
      "theming": [
        "new-theming-api"
      ],
      "ui-components": [
        "lite-mode"
      ],
      "deprecation": [
        "no-deprecated-imports"
      ]
    }
  },
  "prettier": "@atlassian/atlassian-frontend-prettier-config-1.0.0"
}
