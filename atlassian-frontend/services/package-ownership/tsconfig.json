{
  "extends": "../../tsconfig.node.json",
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  // Most ts-node options can be specified here using their programmatic names.
  "ts-node": {
    // Including typechecking since services aren't typechecked by default
    // "transpileOnly": true,
    // We must load files for third party defs - https://typestrong.org/ts-node/docs/types
    "files": true,
  }
}
