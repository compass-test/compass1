{
  "extends": "./tsconfig",
  "include": [
    "./build/**/*",
    "./packages/**/*",
    "./website/**/*",
    "./services/af-service-dashboard/**/*",
    "./services/analytics-auto-push/**/*",
    "./services/branch-netlify-redirect/**/*",
    "./services/statuspage-chainlink/**/*",
    "./services/storybook-product-search-dialog/**/*",
    "./services/techstack-website/**/*",
    "./services/af-product-integration/**/*",
    "./services/performance-portal/**/*",
    "./services/canvas-app/**/*"
  ],
  "exclude": [
    "./packages/**/**/dist",
    "**/node_modules",
    "node_modules",
    "./website/node_modules",
    "./packages/growth/cross-flow-api-internals/flow-src/0-type-compat.ts",
    "./packages/growth/cross-flow-base-types/flow-src/0-type-compat.ts",
    "./packages/growth/cross-flow-support/flow-src/0-type-compat.ts",
    "./packages/growth/cross-flow-plugins/flow-src/0-type-compat.ts",
    "./packages/in-product-testing/in-product-testing-sample/"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    /* Typechecking only, no code generation required */
    "noEmit": true,
    /* Set module to CJS rather than ES so that CJS-only modules that use
     * import/export assignment (export = require(...)) don't break
     */
    "module": "CommonJS"
  }
}
